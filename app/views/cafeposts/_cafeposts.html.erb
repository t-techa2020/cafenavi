<ul class="list-unstyled">
  <% cafeposts.each do |cafepost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(cafepost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to cafepost.user.name, user_path(cafepost.user) %> <span class="text-muted">投稿日：<%= cafepost.created_at.strftime('%Y/%m/%d') %></span>
        </div>
        <div>
          <p>カフェ名： <%= link_to cafepost.name, cafepost_path(cafepost) %></p>
          <p>都道府県： <%= cafepost.prefecture_i18n %></p>
          <p>口コミ： <%= cafepost.content %></p>
          <p><%= image_tag cafepost.image.url %></p>
        </div>
        <% if user_signed_in? %>
          <div class='btn-group'>
            <%= render "favorites/favorite_button", cafepost: cafepost %>
            <% if current_user == cafepost.user %>
              <%= link_to '編集', edit_cafepost_path(cafepost), class: 'btn btn-outline-dark btn-sm ml-1' %>
              <%= link_to "削除", cafepost, method: :delete, data: { confirm: "削除してよろしいですか?" }, class: 'btn btn-outline-dark btn-sm ml-1' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
  <%= paginate cafeposts %>
</ul>
