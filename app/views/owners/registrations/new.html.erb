<div class="container">
  <div class="text-center py-5">
    <h2>owner sign up</h2>
  </div>
  
  <div class="index">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
    
        <%= form_with(model: @owner, url: owner_registration_path, id: 'new_owner', class: 'new_owner', local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          
          <div class="form-group">
            <%= f.label :cafename, 'cafe name' %>
            <%= f.text_field :cafename, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :name, 'owner name' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :address, 'address' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <%= f.label :email, 'email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <%= f.label :password, 'password' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <%= f.label :password_confirmation, 'confirm password' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
    
          <%= f.submit 'owner sign up', class: 'btn btn-outline-dark btn-block' %>
        <% end %>
        <p>><%= link_to 'user sign up', new_user_registration_path %></p>
      </div>
    </div>
  </div>
</div>