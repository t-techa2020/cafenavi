<h3>コーヒー豆の掲載</h3>

<%= form_with(model: @beanpost, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group">
    <%= f.label :コーヒー豆 %>
    <%= f.text_field :name, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :量（g） %>
    <%= f.text_field :amount, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :税込価格（円） %>
    <%= f.text_field :price, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :産地 %>
    <%= f.text_field :country, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit '掲載', class: 'btn btn-outline-dark btn-block' %>
<% end %>