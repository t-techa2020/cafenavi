<% if current_user.favorite?(cafepost) %>
  <%= form_with(model: current_user.favorites.find_by(cafepost_id: cafepost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :cafepost_id, cafepost.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :cafepost_id, cafepost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>