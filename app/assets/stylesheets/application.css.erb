@charset "UTF-8";

.wrapper {
    min-height: 100vh;
    position: relative;
    padding-bottom: 56px;
    box-sizing: border-box;
}

.top {
    background-image: url("<%= asset_path('top.png') %>");
    background-size: cover;
    background-position:center center;  
}

footer {
    width: 100%;
    position: absolute;
    bottom: 0;
}

@media screen and (min-width:768px){
    .container {
        width: 80%;
        margin: 0 auto;
    }
    
    .index {
        width: 80%;
        margin: 0 auto;
    }
}

input#cafepost_image {
    width: 100%;
}

input#beanpost_image {
    width: 100%;
}
